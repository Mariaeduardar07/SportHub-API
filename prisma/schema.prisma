generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model modality {
  id              Int      @id @default(autoincrement())
  name            String   @unique
  image_url       String
  description     String
  type            String
  indoor          Boolean?
  origin_country  String
  olympic         Boolean
  popularity_rank Int
  basic_rules     String
  team_size       Int?
  equipment       String?
  fundamentals    String

  @@map("modalities")
}